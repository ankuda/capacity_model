- content_for(:title) do
  Listing Clients

- content_for(:content_header_links) do
  .justify-content-end.d-flex
    .btn-group.mr-2
      = link_to 'New Client', new_client_path, class: 'btn btn-sm btn-outline-secondary'
    %button.btn.btn-sm.btn-outline-secondary.dropdown-toggle
      %span{"data-feather" => "calendar"}
      This week

.table-responsive.table-hover
  %table.table.table-striped
    %thead
      %tr
        %th Abbr
        %th Name
        %th Projects Active
        %th Projects In Progress
        %th Projects completed
        %th Projects
        %th
        %th

    %tbody
      - @clients.each do |client|
        %tr
          %td= client.abbreviation
          %td= client.name
          %td= link_to client.projects_active.size, client_projects_path(client, status: :active)
          %td= link_to client.projects_in_progress.size, client_projects_path(client, status: :in_progress)
          %td= link_to client.projects_completed.size, client_projects_path(client, status: :completed)
          %td= link_to 'Show', client_projects_path(client)
          %td= link_to 'Edit', edit_client_path(client)
          %td= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' }
