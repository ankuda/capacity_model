= form_for @client, html: { class: 'w-100' } do |f|
  .d-flex.w-100
    - if @client.errors.any?
      #error_explanation
        %h2= "#{pluralize(@client.errors.count, "error")} prohibited this project from being saved:"
        %ul
          - @client.errors.full_messages.each do |message|
            %li= message

  .d-flex.flex-row
    .justify-content-start.w-50.pr-4
      .d-flex.flex-column
        .flex-row.d-inline-flex
          .flex-input-item.flex-fill
            .form-group
              = f.label :abbreviation
              = f.text_field :abbreviation, class: 'form-control'
          .flex-input-item.flex-fill
            .form-group
              = f.label :name
              = f.text_field :name, class: 'form-control'

  .d-flex.flex-row.form-actions.w-100
    = link_to 'Back', resources_path, class: 'btn btn-dark'
    = f.submit 'Save', class: 'btn btn-success'
