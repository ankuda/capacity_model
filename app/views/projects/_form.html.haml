= form_for @project, url: projects_path do |f|
  - if @project.errors.any?
    #error_explanation
      %h2= "#{pluralize(@project.errors.count, "error")} prohibited this project from being saved:"
      %ul
        - @project.errors.full_messages.each do |message|
          %li= message
  .d-flex.form-row
    .form-group
      = f.label :uid
      = f.text_field :uid, class: 'form-control'
    .form-group
      = f.label :name
      = f.text_field :name, class: 'form-control'
  .d-flex.form-row
    .form-group
      = f.label :hours
      = f.number_field :hours, class: 'form-control'
    .form-group
      = f.label :price
      = f.number_field :price, class: 'form-control'
    .form-group
      = f.label :currency
      = f.text_field :currency, class: 'form-control'
  .d-flex.form-row
    .form-group
      = f.label :status
      = f.text_field :status, class: 'form-control'
    .form-group.w-33
      = f.label :client_id
      = f.collection_select :client_id, Client.all, :id, :name, { prompt: true }, { class: 'form-control' }
  .d-flex.form-row.actions
    = f.submit 'Save', class: 'btn btn-success'
