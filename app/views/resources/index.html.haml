- content_for(:title) do
  Listing Resources

- content_for(:content_header_links) do
  .justify-content-end.d-flex
    .btn-group.mr-2
      = link_to 'New Resource', new_resource_path, class: 'btn btn-sm btn-outline-secondary'
    %button.btn.btn-sm.btn-outline-secondary.dropdown-toggle
      %span{"data-feather" => "calendar"}
      This week


.table-responsive.table-hover
  %table.table.table-striped
    %thead
      %tr
        %th Name
        %th Email
        %th Assigned Projects
        %th Capacity, %
        %th Daily, h
        %th
        %th

    %tbody
      - @resources.each do |resource|
        %tr
          %td= resource.name
          %td= resource.email
          %td= resource.projects.size
          %td= resource.general_capacity
          %td= resource.daily_capacity
          %td= link_to 'Edit', edit_resource_path(resource)
          %td= link_to 'Destroy', resource, method: :delete, data: { confirm: 'Are you sure?' }
